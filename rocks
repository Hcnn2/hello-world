sample_bay = ["Basalt","Silica","Iron","Dust"]
print(sample_bay[0])
Total = (len(sample_bay))
print(sample_bay[-1])
print("total number of samples is",Total)

for samples in sample_bay:
    print("Transmitting data for :", samples)

new_findings = []

while len(new_findings) < 3:
    new_rock = input("Input rock type:")
    new_findings.append(new_rock)

print(new_findings, sample_bay)

Trash = "Dust"
if Trash in sample_bay:
    print("Dust is present. Removing Dust...")
    sample_bay.remove(Trash)
    print(sample_bay, new_findings)
else:
    print(sample_bay,new_findings)





